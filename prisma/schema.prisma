generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Game {
  id        String   @id @default(cuid())
  slug      String   @unique
  createdAt DateTime @default(now())
  user      User?     @relation(fields: [userId], references: [id])
  userId  String? @unique
  @@index([userId])
}

model User {
  id   String  @id @default(cuid())
  name String?
  games Game[]
}
